<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table>
  <thead>
    <tr>
      <th>Bill no</th>
      <th>Date</th>
      <th>Payment mode</th>
      <th>Customer</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= link_to bill.bill_no, bill %></td>
        <td><%= bill.date.strftime("%d-%m-%y %H:%M") %></td>
        <td><%= bill.payment_mode %></td>
        <td><%= bill.customer %></td>
        <td><%= number_to_currency(bill.total, :precision => 2, :unit => 'â‚¹') %></td>
        <td>
          <%= link_to edit_bill_path(bill), class: 'icon-action', title: 'Edit Bill' do %>
            <i class="fa fa-edit"></i>
          <% end %> | 
          <%= link_to bill, method: :delete, data: { confirm: 'Are you sure?' }, class: 'icon-action', title: 'Delete Bill' do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="clear:both;" class="links">
  <%= link_to 'New Bill', new_bill_path %>
</div>
